mixin map(data)
  .map
    .container
      h1 !{data.title}
      h2 !{data.subTitle}
      each item in data.items
        p !{item}

      .map__inner
        .map__inner-map(data-map=data.mapId data-center=data.center data-zoom=data.zoom)
        if data.superZoom === true
          .map__super-zoom(data-map="superzoom")
            p Для масштабирования карты колесом мыши, зажмите клавишу Ctrl
      if data.filter === true
        .map-filter
          form.map-filter__form(action = "#")
            .map-filter__list
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="all" id="filterAll" checked)
                label.map-filter__label(for="filterAll")
                  span Все объекты
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="park" id="filterPark")
                label.map-filter__label(for="filterPark")
                  span Парки
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="museum" id="filterMuseum")
                label.map-filter__label(for="filterMuseum")
                  span Музеи
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="children" id="filterChildren")
                label.map-filter__label(for="filterChildren")
                  span Дет. сады
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="hospital" id="filterHospital")
                label.map-filter__label(for="filterHospital")
                  span Поликлиники
              .map-filter__item
                input.visually-hidden(type="radio" name="filterList" value="school" id="filterSchool")
                label.map-filter__label(for="filterSchool")
                  span Школы




